{
    "cleanUrls": true,
    "crons": [
        {
            "path": "/api/sync-photos",
            "schedule": "*/15 * * * *"
        }
    ],
    "functions": {
        "api/sync-photos.js": {
            "maxDuration": 60
        },
        "api/import-data.js": {
            "maxDuration": 60
        }
    },
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/$1"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=0, must-revalidate"
                }
            ]
        },
        {
            "source": "/api/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "no-store"
                }
            ]
        }
    ]
}